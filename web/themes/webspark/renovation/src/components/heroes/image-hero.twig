<div class="uds-hero-{{ size }} {{ has_button_row ? 'has-btn-row' }}">
  <div class="hero-overlay"></div>

  <img class="hero" src="{{ hero_background }}" alt="{{ hero_alt }}" loading="lazy" decoding="async" fetchpriority="high"/>

  <div role="doc-subtitle">
    <span class="{{ sub_heading_background }}">{{ sub_heading }}</span>
  </div>

  {% include '@renovation/headings/heading-highlighted.twig' with {
    html_tag : 'h1',
    heading: heading,
    highlight: heading_background,
  } %}

  {% if size != 'sm' %}
    <div class="content">
      <p class="text-white">{{ hero_body|raw }}</p>
    </div>
  {% endif %}

  {% if cta_btn %}
    {% if has_button_row %}
      <div class="btn-row">
        {{ cta_btn }}
      </div>
    {% else %}
      {{ cta_btn }}
    {% endif %}
  {% endif %}
</div>
