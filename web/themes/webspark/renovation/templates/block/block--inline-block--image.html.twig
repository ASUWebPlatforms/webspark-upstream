{#
/**
 * @file
 * Template for a accordion block.
 */
#}
{% set classes = [
  'block',
  'block-' ~ configuration.provider|clean_class,
  'block-' ~ plugin_id|clean_class,
] %}

<div{{ attributes.addClass(classes) }}>
  {# To allow contextual links to display the title_suffix is required. #}
  {{ title_prefix }}
  {% if label %}
    {% block label %}
      <h2{{ title_attributes }}>{{ label }}</h2>
    {% endblock %}
  {% endif %}
  {{ title_suffix }}
  {{ content.field_tooltip }}
  {{ content|without('field_image_caption', 'field_media', 'field_add_drop_shadow', 'field_image_size', 'field_tooltip') }}
  {% include '@renovation/block/image-block.twig' with {
    caption: content.field_image_caption,
    media: content.field_media,
    drop_shadow: content.field_add_drop_shadow,
    size: content.field_image_size[0]['#markup'],
  } %}
</div>
